@{
    ViewData["Title"] = "Home Page";
}

<br />
<div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <h1>Kiroshi TechWear</h1>
   
    <br />
    <br />

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/kiroshi-wall.jpg" class="d-block w-100 imagen" alt="Kiroshi-EyeWear">

            <div class="container ">
                <div class="carousel-caption text-start">   
                    <h1>Visión de Futuro</h1>
                    <p>Disfruta de los pequeños detalles</p>
                    <p><button class="button-64" role="button"> <span class="text"><a asp-controller="Account" asp-action="Login"><b>Registrarse</b></a></span> </button></p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            
            <img src="~/images/space.jpg" class="d-block w-100 imagen" alt="Space Image">

            <div class="container">
                <div class="carousel-caption">
                    <h1>Un mundo de posibilidades.</h1>
                    <p>Explora nuestros nuevos productos.</p>
                    <p><button class="button-64" role="button"> <span class="text"><href ="#"><b>Aprende más</b></span> </button></p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/kiroshi-wall.jpg" class="d-block w-100 imagen" alt="Kiroshi-EyeWear">

            <div class="container">
                <div class="carousel-caption text-end">
                    <h1>Visión de Futuro</h1>
                    <p>Disfruta de los pequeños detalles</p>
                    <p><button class="button-64" role="button"> <span class="text"><href ="#"><b>Galería</b></span> </button></p>
                </div>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


